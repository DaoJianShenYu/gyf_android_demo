<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp"  >
    
	<LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/dialog_title_background"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:src="@drawable/dialog_title_default_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="输入密码"
            android:textSize="17sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_enterdialog_pwd"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <LinearLayout 
        android:layout_width="280dp" 
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button 
            android:gravity="center"
            android:id="@+id/bt_enterdialog_ok"
            android:layout_width="0px" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="#aaffffff"
            android:textSize="15sp"
            android:background="@drawable/dg_confirm_selector"
            />
        <Button 
            android:gravity="center"
            android:id="@+id/bt_enterdialog_cancle"
            android:layout_width="0px" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#aa000000"
            android:textSize="15sp"
            android:background="@drawable/dg_cancle_selector"
            />
    </LinearLayout>
</LinearLayout>